<Window x:Class="Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Name="NumberTextBox" Text="Guess a number! (0-10)" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="21" Margin="0,337,0,0"/>
        <TextBlock HorizontalAlignment="Center" Name="GuessedTextBlock" FontSize="30" Visibility="Hidden" TextAlignment="Center" Text="You have guessed it!" TextWrapping="Wrap" VerticalAlignment="Center" Width="624"/>
        <Button Content="Guess" HorizontalAlignment="Left" Margin="555,337,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click"/>
        <CheckBox IsChecked="True" Content="Start new game automatically" Name="StartNewGameCheckBox"  HorizontalAlignment="Center" Margin="0,381,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
